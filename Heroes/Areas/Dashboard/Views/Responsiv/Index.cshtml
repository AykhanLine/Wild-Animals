@model List<Responsiv>

@if(Model == null)
{
   <a class="btn btn-outline-success btn-sm my-4" href="/dashboard/responsiv/create">Create</a>
}


<a class="btn btn-outline-success btn-sm my-4" href="/dashboard/responsiv/create">Create</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Icon</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                 <td>@item.Subtitle</td>
                <td>
                    <i class="@item.Icon fa-2x"></i>
                </td>
                <td>
                    <a href="/dashboard/responsiv/edit/@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a href="/dashboard/responsiv/delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>



