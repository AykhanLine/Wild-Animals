@model List<People>

@if(Model == null)
{
   <a class="btn btn-outline-success btn-sm my-4" href="/dashboard/people/create">Create</a>
}

<a class="btn btn-outline-success btn-sm my-4" href="/dashboard/people/create">Create</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                 <td>@item.Description</td>
               <td>
                    <img width = "40" src="@item.PhotoURL" />
                </td>
                <td>
                    <a href="/dashboard/people/edit/@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a href="/dashboard/people/delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>


