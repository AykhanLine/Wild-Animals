<script>
    let button = document.getElementById("submitButton")
    button.onclick = (e) => {
        var formData = $("#contactForm").serialize();
        e.preventDefault()
        console.table(formData)

        $.ajax({
            type: "POST",
            url: "/Home/Contact",
            data: formData,
            success: function() {
                Swal.fire(
                    'Good job!',
                    'You clicked the button!',
                    'success'
                )
            }
        })
    }
</script>


 

